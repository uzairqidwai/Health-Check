<?xml version="1.0" encoding="UTF-8" ?>
<!-- Root element containing all the checks -->
<checks>
    <!-- Each check is enclosed in a <check> tag -->
    <check>
        <!-- Name of the check -->
        <name>Check Python Version</name>
        <!-- Shell command to be executed -->
        <command>python --version</command>
        <!-- Expected output of the command for an exact match. Leave it empty for keyword match -->
        <expectedOutput>Python 3.8.5</expectedOutput>
        <!-- Check type: 1 for quick, 2 for full -->
        <checkType>1</checkType>
        <!-- Match type: "exact" for exact match, "keyword" for keyword search -->
        <matchType>exact</matchType>
        <!-- Keywords for search. Used when matchType is "keyword". Separate keywords with comma -->
        <keywords></keywords>
    </check>

    <!-- Second check example -->
    <check>
        <name>Check Available Memory</name>
        <command>free -m</command>
        <expectedOutput></expectedOutput>
        <checkType>2</checkType>
        <matchType>keyword</matchType>
        <!-- Keywords to look for in the output -->
        <keywords>Mem, total, free</keywords>
    </check>
</checks>
